<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<!-- This redirects to the welcome file, which I've listed as the login page. -->
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	
	<!--  These define actions (servlet operations) the JSPs can use. -->
	<servlet>
		<servlet-name>loggingin</servlet-name>
		<servlet-class>com.hospitalmanagement.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loggingin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>registering</servlet-name>
		<servlet-class>com.hospitalmanagement.RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>registering</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

</web-app>